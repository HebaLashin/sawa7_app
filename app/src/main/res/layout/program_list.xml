<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafbfd"
    android:orientation="vertical"
    android:paddingTop="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.uniquestartup.mohamedaliheeba.sawa7.GenaricClass.CustomImageView
            android:id="@+id/imgIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:scaleType="centerCrop"
            ></com.uniquestartup.mohamedaliheeba.sawa7.GenaricClass.CustomImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.uniquestartup.mohamedaliheeba.sawa7.GenaricClass.CustomTextView
                android:id="@+id/txtPlaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="TextView"
                android:textColor="#7A99E5"
                android:textSize="18dp"
                android:textStyle="bold"></com.uniquestartup.mohamedaliheeba.sawa7.GenaricClass.CustomTextView>

            <com.uniquestartup.mohamedaliheeba.sawa7.GenaricClass.CustomTextView
                android:id="@+id/txtcatogryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="TextView"
                android:textColor="#C0C0C2"
                android:textSize="15dp"></com.uniquestartup.mohamedaliheeba.sawa7.GenaricClass.CustomTextView>

            <com.uniquestartup.mohamedaliheeba.sawa7.GenaricClass.CustomTextView
                android:id="@+id/txtDistatBetween"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="TextView"
                android:textColor="#C0C0C2"
                android:textSize="15dp"></com.uniquestartup.mohamedaliheeba.sawa7.GenaricClass.CustomTextView>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.uniquestartup.mohamedaliheeba.sawa7.GenaricClass.CustomTextView
            android:id="@+id/txtFullAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:paddingTop="10dp"
            android:text="Text View"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>