<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#343642"
    tools:context="com.uniquestartup.mohamedaliheeba.sawa7.activity.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <Button
                android:id="@+id/M_btnTranslate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#0877a1"
                android:text="Translate Page"
                android:textColor="@color/accent" />

            <Button
                android:id="@+id/M_btnElQuibla"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#0877a1"
                android:text="El Quibla Page"

                android:textColor="@color/accent" />

            <Button
                android:id="@+id/M_btngetCurrntLocation"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#0877a1"
                android:text="Current location"

                android:textColor="@color/accent" />

            <Button
                android:id="@+id/M_btnUniteConvert"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#0877a1"
                android:text="Unite Converter "
                android:textColor="@color/accent" />

        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
